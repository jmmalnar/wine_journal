<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to "Amy's Wine Journal", wines_path, class: 'navbar-brand' %>

      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <% if params[:action] == 'index' %>
            <li class="active">
              <%= link_to wines_path do %>
                  my wine list
                  <%= content_tag(:span, '(current)', class: 'sr-only') %>
              <% end %>
            </li>
            <li>
              <%= link_to 'add new wine', new_wine_path %>
            </li>
        <% elsif params[:action] == 'new' %>
            <li>
              <%= link_to 'my wine list', wines_path %>
            </li>
            <li class="active">
              <%= link_to new_wine_path do %>
                  add new wine
                  <%= content_tag(:span, '(current)', class: 'sr-only') %>
              <% end %>
            </li>
        <% else %>
            <li>
              <%= link_to 'my wine list', wines_path %>
            </li>
            <li>
              <%= link_to 'add new wine', new_wine_path %>
            </li>
        <% end %>
      </ul>
      <form class="navbar-form navbar-right" role="search">
        <%= form_tag(wines_path, :method => "get", id: "search-form", class: "form-group") do %>
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Wines" %>
            <%= submit_tag "Search", class: "btn btn-default" %>
        <% end %>
      </form>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>