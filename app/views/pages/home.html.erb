<div class="slidemenu-slide">

  <!-- collapsed by default -->
  <nav class="navigation navigation-hidden">
    <div class="menu_links">
      <h2>Drink Wine</h2>
      <hr>
      <% if logged_in? %>
          <%= link_to wines_path, class: 'menu_links' do %>
              <%= content_tag(:span, "", class: "glyphicon glyphicon-list")%><span>MY LIST</span>
          <% end %>
          <hr>
          <%= link_to find_path, class: 'menu_links' do %>
              <%= content_tag(:span, "", class: "glyphicon glyphicon-glass")%><span>ADD A WINE</span>
          <% end %>
          <hr>
      <% else %>
          <%= link_to "Sign up now", signup_path %>
          <hr>
          <%= link_to "Login", login_path %>
      <% end %>
    </div>
  </nav>

  <!-- full width by default -->
  <div class="content">
    <%= image_tag('logo.png', id: "title") %>
  </div>

</div>
