<% provide(:title, 'Log in') %>
<div class="page_title no_navbar_title">
  <h1>Login</h1>
</div>

<%= render '/shared/alerts' %>

<%= form_for(:session, url: login_path, :html => {:class => "form-horizontal", :id => 'login_form'}) do |f| %>

    <div class="form-group">
      <%= f.label :email, class: 'col-xs-2 control-label form_label' %>
      <div class="col-xs-8">
        <%= f.text_field :email, :class => 'form-control form_field', :placeholder => 'email address' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'col-xs-2 control-label form_label' %>
      <div class="col-xs-8">
        <%= f.password_field :password, :class => 'form-control form_field', :placeholder => 'password' %>
      </div>
    </div>
    <div class="form-group">
      <%= link_to 'forgot password', new_password_reset_path, class: 'col-xs-8 col-xs-offset-2' %>
    </div>
    <div class="form-group">
      <%= f.label :remember_me, class: 'checkbox inline col-xs-8 col-xs-offset-2' do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
      <% end %>
    </div>

    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-10">
        <%= f.submit "Log in", class: 'submit_button btn btn-default' %>
        <br/><br/>
        <p>New user? <%= link_to "Sign up now", signup_path %></p>
      </div>
    </div>
<% end %>