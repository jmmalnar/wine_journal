<% provide(:title, 'Log in') %>

<%= render '/shared/alerts' %>

<div class="container" id="login_page_content">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="account-wall">
        <h1 class="text-center login-title">Sign in to continue to Amy's Wine Journal</h1>
        <%= form_for(:session, url: login_path, :html => {:class => "form-signin", :id => 'login_form'}) do |f| %>
            <br/>
            <%= f.text_field :email, :class => 'form-control', :type => 'text', :placeholder => 'Email', :autofocus=>true %>
            <br/>
            <%= f.password_field :password, :class => 'form-control', :type => 'password', :placeholder => 'Password' %>
            <br/>
            <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block', :type => 'submit' %>
            <%= f.label :remember_me, class: 'checkbox pull-left' do %>
                <%= f.check_box :remember_me %>
                <span>Remember me</span>
            <% end %>
            <%= link_to 'Forgot password?', new_password_reset_path, class: 'pull-right need-help' %><span class="clearfix"></span>
        <% end %>
      </div>
      <%= link_to 'Create an account', signup_path, :class => 'text-center new-account' %>
    </div>
  </div>
</div>